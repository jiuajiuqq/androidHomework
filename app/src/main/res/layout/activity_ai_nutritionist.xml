<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activity.AINutritionistActivity">

    <EditText
        android:id="@+id/et_dish_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入菜品名称 (例如：宫保鸡丁)"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_upload_image"
        app:layout_constraintHorizontal_weight="3"
        android:layout_marginEnd="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_upload_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="上传图片"
        app:icon="@android:drawable/ic_menu_camera"
        app:layout_constraintTop_toTopOf="@id/et_dish_input"
        app:layout_constraintBottom_toBottomOf="@id/et_dish_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/btn_analyze"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AI 分析营养"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_dish_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_result_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="分析结果："
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_analyze"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@id/tv_result_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_nutrition_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI 营养师分析结果和饮食建议将显示在此处。请在上方输入菜品名称或上传图片后进行分析。"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>