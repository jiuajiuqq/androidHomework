<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"> <!-- 外层增加 padding -->

    <!-- ********************************************** -->
    <!-- I. 移植的原有菜品详情区 (来自 popupwindow_dish_detail.xml) -->
    <!-- ********************************************** -->

    <androidx.cardview.widget.CardView
        android:id="@+id/dish_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardUseCompatPadding="false"
        app:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_dish_in_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <!-- 菜品图片 -->
                <ImageView
                    android:id="@+id/dish_img"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_remove_red_eye_24" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.3" />

                <!-- 菜品名称 (重命名ID，与Fragment绑定保持一致) -->
                <TextView
                    android:id="@+id/tv_detail_dish_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="dishName"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_detail_dish_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="parent" />

                <!-- 菜品价格 (重命名ID，与Fragment绑定保持一致) -->
                <TextView
                    android:id="@+id/tv_detail_dish_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dishPrice"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_detail_dish_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_dish_name" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.65" />

                <!-- 减号按钮 -->
                <ImageButton
                    android:id="@+id/dish_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:contentDescription="@string/buttonSub"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:layout_constraintBottom_toBottomOf="@+id/dish_count"
                    app:layout_constraintEnd_toStartOf="@+id/dish_count"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/guideline4"
                    app:layout_constraintTop_toTopOf="@+id/dish_count"
                    app:srcCompat="@drawable/icon_reduce" />

                <!-- 份数显示 -->
                <TextView
                    android:id="@+id/dish_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/dish_add"
                    app:layout_constraintEnd_toStartOf="@+id/dish_add"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/dish_sub"
                    app:layout_constraintTop_toTopOf="@+id/dish_add" />

                <!-- 加号按钮 -->
                <ImageButton
                    android:id="@+id/dish_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:contentDescription="@string/buttomAdd"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/dish_count"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/icon_add" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 菜品描述 -->
            <TextView
                android:id="@+id/dish_desctiption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="this is dish description" />

            <!-- 【移除！】ViewStub spicy_option -->
            <!-- 【移除！】ViewStub sweet_option -->

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!-- ********************************************** -->
    <!-- II. 新增评论输入和列表区域 -->
    <!-- ********************************************** -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发表评论"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/et_comment_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="说点什么吧..."
            android:maxLines="3"
            android:minLines="1"/>

        <Button
            android:id="@+id/btn_submit_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所有评论"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:layout_marginTop="8dp"/>

</LinearLayout>